{"https://moirai2.github.io/schema/daemon/input":{"$outdir":"kraken"},"https://moirai2.github.io/schema/daemon/bash":["url=\"https://github.com/DerrickWood/kraken/archive/master.zip\"","log=$tmpdir/log.txt","download=$(perl $tmpdir/download.pl $url $tmpdir)","unzip -d $tmpdir $tmpdir/master.zip>$log 2>&1","cd $tmpdir/kraken-master","bash install_kraken.sh ../out","cd $cwd","mv $tmpdir/out $outdir","rm -r $tmpdir/kraken-master","rm $tmpdir/master.zip"],"https://moirai2.github.io/schema/daemon/script":[{"https://moirai2.github.io/schema/daemon/script/name":"$tmpdir/download.pl","https://moirai2.github.io/schema/daemon/script/code":["use LWP::UserAgent;","use HTTP::Request;","use File::Basename;","my $url=shift(@ARGV);","my $outdir=shift(@ARGV);","my $agent=new LWP::UserAgent();","$agent->agent('download.pl/1.0');","$agent->timeout(10);","$agent->env_proxy;","my $request=HTTP::Request->new(GET=>$url);","my $filename=\"$outdir/\".basename($url);","my $res=$agent->request($request);","if($res->is_success){","open(OUT,\">$filename\");","print OUT $res->content;","close(OUT);","print \"$filename\\n\";","}elsif(","$res->is_error){","exit(1);","}"]},{"https://moirai2.github.io/schema/daemon/script/name":"$tmpdir/os.pl","https://moirai2.github.io/schema/daemon/script/code":["my $name=`uname -s`;","chomp($name);","my $machine=`uname -m`;","chomp($machine);","if($name eq \"Darwin\"){$name=\"MacOSX\";}","print $name.\"_\".$machine.\"\\n\";"]}],"https://moirai2.github.io/schema/daemon/output":"$log"}
