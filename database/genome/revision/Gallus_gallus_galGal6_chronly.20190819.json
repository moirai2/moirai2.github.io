{"https://moirai2.github.io/schema/daemon/input":{"$outdir":"genome"},"https://moirai2.github.io/schema/daemon/bash":["url=\"http://hgdownload.soe.ucsc.edu/goldenPath/galGal6/bigZips/galGal6.fa.gz\"","mkdir -p $outdir","path=$outdir/galGal6.fa","download=$(perl $tmpdir/download.pl $url $tmpdir)","gzip -cd $download|perl $tmpdir/pick.pl random chrUn alt>$path","rm $download"],"https://moirai2.github.io/schema/daemon/script":[{"https://moirai2.github.io/schema/daemon/script/name":"$tmpdir/download.pl","https://moirai2.github.io/schema/daemon/script/code":["use LWP::UserAgent;","use HTTP::Request;","use File::Basename;","my $url=shift(@ARGV);","my $outdir=shift(@ARGV);","my $agent=new LWP::UserAgent();","$agent->agent('download.pl/1.0');","$agent->timeout(10);","$agent->env_proxy;","my $request=HTTP::Request->new(GET=>$url);","my $filename=\"$outdir/\".basename($url);","my $res=$agent->request($request);","if($res->is_success){","open(OUT,\">$filename\");","print OUT $res->content;","close(OUT);","print \"$filename\n\";","}elsif(","$res->is_error){","exit(1);","}"]},{"https://moirai2.github.io/schema/daemon/script/name":"$tmpdir/pick.pl","https://moirai2.github.io/schema/daemon/script/code":["my @ungreps=@ARGV;","my $found=1;","while(<STDIN>){","	my $line=$_;","	if(/^>\s*(\w+)\s*$/){","		$found=1;","		my $chromosome=$1;","		foreach my $ungrep(@ungreps){if($chromosome=~/$ungrep/){$found=0;}}","	}","	if($found){print $line;}","}"]}],"https://moirai2.github.io/schema/daemon/output":"$path"}
